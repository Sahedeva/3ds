<% include ./partials/header %>

<div class="d-flex justify-content-center align-items-center flex-column col-6 offset-md-3">
    <form action="/emailnotification" method="post">
      <div class="form-group row">
        <div class="col-12">
          <input style="display: none;" type="text" name="" value="<%= foodbanks[0]['_id'] %>">
          <input class="form-control" type="text" value="To: Select All" id="example-text-input">
        </div>
      </div>
      <span class="icon d-flex justify-content-center"><i class="material-icons background-circle ">check</i>&nbsp;&nbsp;Select All</span>
      <div class="form-group row">
        <div class="col-12">
          <input class="form-control" type="text" name="subject" value="Feed Texas stock update" id="example-text-input">
        </div>
      </div>
      <div class="form-group">
        <textarea name="body" class="form-control col-12" id="exampleTextarea" rows="10"></textarea>
      </div>
      <button class="btn-success" type="submit" name="submit">Send</button>
  </form>
</div>
<script type="text/javascript">
  document.getElementById("exampleTextarea").defaultValue = "Produce List Updated!";
</script>
</body>
</html>
